<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="?attr/actionBarSize">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="610dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="70.47dp"
            android:layout_height="31.92dp"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:src="@drawable/ic_ondo_bar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이 앱을 만든 이유..."
            android:textStyle="bold"
            android:fontFamily="@font/nanumsquareround"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:layout_marginTop="86dp"/>

        <TextView
            android:id="@+id/chatAbout"
            android:layout_width="213dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="17dp"
            android:fontFamily="@font/nanumsquareround"
            android:textColor="#000000"
            android:text="여기는 앱의 취지 및 하고싶은 말, 또는 명언이 들어갈 예정입니다."
            android:textSize="16sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="140dp"
            android:src="@drawable/ic_line" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="API 제공 : https://msub.kr/api"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginLeft="41dp"
            android:layout_marginTop="200dp"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/nanumsquareround"/>

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="?android:attr/windowBackground"
        app:itemIconTint="#C4C4C4"
        app:itemTextColor="#C4C4C4"
        app:menu="@menu/bottom_nav_menu" />

</LinearLayout>